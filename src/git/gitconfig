[credential]
    helper = store

[core]
	editor = vim
	sshcommand=ssh -i ~/.ssh/github

[init]
	defaultBranch = main

[push]
	autoSetupRemote = true

[pull]
	ff = only

[merge]
	ff = false

[gpg]
      format = ssh
	  
[commit]
      gpgsign = true

[include]
  	path = ~/.gitconfig.personal

[includeIf "gitdir:~/workspace/**/"]
  	path = ~/.gitconfig.workspace
